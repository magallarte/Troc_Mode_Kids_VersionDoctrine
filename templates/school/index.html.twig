{% extends 'base.html.twig' %}

{% block title %}School index{% endblock %}

{% block body %}
    <h1>School index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>School_name</th>
                <th>School_address1</th>
                <th>School_address2</th>
                <th>School_zip_code</th>
                <th>School_city</th>
                <th>School_director_gender</th>
                <th>School_director_name</th>
                <th>School_director_tel</th>
                <th>School_director_email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for school in schools %}
            <tr>
                <td>{{ school.id }}</td>
                <td>{{ school.schoolName }}</td>
                <td>{{ school.schoolAddress1 }}</td>
                <td>{{ school.schoolAddress2 }}</td>
                <td>{{ school.schoolZipCode }}</td>
                <td>{{ school.schoolCity }}</td>
                <td>{{ school.schoolDirectorGender }}</td>
                <td>{{ school.schoolDirectorName }}</td>
                <td>{{ school.schoolDirectorTel }}</td>
                <td>{{ school.schoolDirectorEmail }}</td>
                <td>
                    <a href="{{ path('school_show', {'id': school.id}) }}">show</a>
                    <a href="{{ path('school_edit', {'id': school.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('school_new') }}">Create new</a>
{% endblock %}