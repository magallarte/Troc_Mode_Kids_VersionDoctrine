{% extends 'base.html.twig' %}

{% block title %}Delivery{% endblock %}

{% block body %}
    <h1>Livraison</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ delivery.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ delivery.delivery_type }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ delivery.delivery_date ? delivery.delivery_date|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('delivery_index') }}">Retour Ã  la liste</a>

    <br>
    {% if app.session.get('user') and app.session.get('user').MemberRole is same as(6) %}
    <a href="{{ path('delivery_edit', {'id': delivery.id}) }}">Modifier</a>
    <br>
    {{ include('delivery/_delete_form.html.twig') }}
    {% endif %}
      
{% endblock %}