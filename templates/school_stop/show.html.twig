{% extends 'base.html.twig' %}

{% block title %}Tournée{% endblock %}

{% block body %}
    <h1>Tournée</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ school_stop.id }}</td>
            </tr>
            <tr>
                <th>Date/Heure</th>
                <td>{{ school_stop.schoolStop_date ? school_stop.schoolStop_date|date('m-d-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ecole</th>
                <td>{{ school_stop.schoolStopSchool.schoolName}}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('school_stop_index') }}">Retour à la liste</a>
    <br>
    {% if app.session.get('user') %}
        {% for role in app.session.get('user').MemberRole %}
            {% if role.id ==  "6" %}
            <a href="{{ path('school_stop_edit', {'id': school_stop.id}) }}">modifier</a>
            <br>
            {{ include('school_stop/_delete_form.html.twig') }}
            {% endif %}
        {% endfor %}
    {% endif %}
   
{% endblock %}